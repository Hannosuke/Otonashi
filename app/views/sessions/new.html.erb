<div class="vh-100 text-center">
  <div class="my-5 pt-5">
    <h1 class="fw-bold">Otonashi</h1>
  </div>
  <div class="d-flex justify-content-center">
    <div class="mt-5" style="width: 400px">
      <%= form_with scope: :session, local: true do |f| %>
        <div class="mb-4 px-5">
          <%= f.text_field :email, required: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="mb-4 px-5">
          <%= f.password_field :password, required: true, placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="d-grid gap-2 mb-5 px-5">
          <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

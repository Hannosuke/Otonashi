<%= turbo_frame_tag task do %>
  <div class="border-bottom border-1">
    <div class="px-5 py-4 m-0 row justify-content-between">
      <p class="p-0 m-0 col-5 fw-bold d-flex align-items-center"><%= l(task.due_on, format: :short) %>&nbsp;ã€†</p>
      <div class="col-3 p-0">
        <%= render partial: "tasks/completion", locals: { task: task } %>
      </div>
    </div>
    <div class="px-5 py-4 m-0 position-relative">
      <%= link_to task_path(task), class: "link-dark stretched-link py-3", style: "text-decoration: none" do %>
        <p class="m-0"><%= text_url_to_link(safe_join((h(task.description)).split("\n"),tag(:br))).html_safe %></p>
      <% end %>
    </div>
    <div class="px-5 py-4 m-0 d-flex justify-content-end">
      <p class="m-0 col-7 text-end text-black-50">created by <%= task.user.name %></p>
    </div>
  </div>
<% end %>
